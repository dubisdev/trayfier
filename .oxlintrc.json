{
    "$schema": "./node_modules/oxlint/configuration_schema.json",
    "plugins": [
        "react",
        "react-perf"
    ],
    "rules": {
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
    }
}
